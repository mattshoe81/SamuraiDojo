<div class="container" ng-controller="AwardsController as vm">
    <div class="spacer-25"></div>

    <div class="col-sm-12">
        <div class="spacer-10"></div>
        <div ng-repeat="award in vm.Awards | orderBy: '-Points'">
            <div class="row">
                <h3 class="">
                    <span class="bold italic">'{{award.Name}}'</span>
                </h3>
                <h4 class="">
                    <span class="bold italic">{{award.Points}} Points</span>
                </h4>
                <p class="textbox">
                    {{award.Description}}
                </p>
            </div>
            <hr />
        </div>

    </div>
</div>
